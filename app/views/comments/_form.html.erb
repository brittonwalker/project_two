<div class="container">
  <div class="post">
    <div class="title element">
      <%= @post.title %>
    </div>
    <div class="body">
      <%= @post.body %>
    </div>
    <%= form_for([@post, @post.comments.build]) do |f| %>
    <%= f.label :content %><br>
    <%= f.text_field :content %>

    <%= f.submit %>
    <% end %>
  </div>
  <%= link_to 'Back to Posts', posts_path %>
</div>
