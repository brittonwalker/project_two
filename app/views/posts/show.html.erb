<div class="container">
  <div class="post">
    <div class="title element">
      <%= @post.title %>
    </div>
    <div class="body">
      <%= image_tag @post.img_url %>
      <%= @post.body %>
    </div>
    <%= link_to 'Edit Post', edit_post_path(@post)%>
    <%= link_to 'Destroy', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
  </div>
  <%= link_to 'Back to Posts', posts_path %>
</div>
